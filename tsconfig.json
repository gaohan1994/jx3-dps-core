{
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["es6"],
    "target": "ES5",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "rootDir": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
  // "compileOnSave": true
}
