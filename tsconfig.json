{
  "compilerOptions": {
    "module": "ES2015",
    "lib": ["es6"],
    "target": "ES5",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "rootDir": ".",
    "paths": {
      "@calculator/*": ["src/calculator/*"],
      "@componet/*": ["src/componet/*"],
      "@config/*": ["src/config/*"],
      "@packages/*": ["src/packages/*"],
      "@types": ["./src/types.ts"]
    }
  },
  "include": ["src/**/*"]
  // "compileOnSave": true
}
