{
  "compilerOptions": {
    "module": "commonjs",
    "lib": ["es6", "DOM"],
    "target": "es5",
    "allowJs": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "src",
    // "rootDir": ".",
    "paths": {
      "*": ["node_modules/*", "src/types/*"]
    }
  },
  "include": ["src/**/*"],
  // "exclude": ["node_modules"],
  "compileOnSave": true
}
